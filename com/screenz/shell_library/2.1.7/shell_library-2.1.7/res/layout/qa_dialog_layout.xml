<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:padding="10dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/et_qa_dialog_pid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:hint="@string/qa_dialog_pid_hint"/>

    <EditText
        android:id="@+id/et_qa_dialog_webviewurl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:hint="@string/qa_dialog_weburl_hint"/>

    <EditText
        android:id="@+id/et_qa_dialog_baseurl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:hint="@string/qa_dialog_baseurl_hint"/>

    <CheckBox
        android:id="@+id/check_qa_dialog_mode"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/qa_dialog_mode_text"
        />

    <Button
        android:id="@+id/btn_qa_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/qa_dialog_button"/>

</LinearLayout>
